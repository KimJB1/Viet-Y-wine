@model Model.ProductDetail

@{
    var lstProduct = ViewBag.dataProduct;
}


<div class="body">
    <div class="container-fluid">
        <div class="row clearfix">
            <div class="col-sm-12">
                <div class="card">
                    <div class="header">
                        <ul class="header-dropdown">
                            <li class="dropdown">
                                <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"> <i class="zmdi zmdi-settings zmdi-hc-spin"></i> </a>
                                <ul class="dropdown-menu dropdown-menu-right">
                                    <li><a href="javascript:void(0);" onclick="btnClick('/Admin/ProductDetails/_Index',@lstProduct.ID)">Danh sách mô tả</a></li>
                                    <li><a href="javascript:void(0);" onclick="selectView('/Admin/ProductDetails/Edit',@lstProduct.ID,@Model.ID)">Sửa</a></li>
                                    <li><a href="javascript:void(0);" onclick="removeClick('/Admin/ProductDetails/Delete',@lstProduct.ID,@Model.ID)">Xóa</a></li>
                                </ul>
                            </li>
                        </ul>
                    </div>
                    <div class="body">
                        <!-- Nav tabs -->
                        <ul class="nav nav-tabs p-0 mb-3 nav-tabs-success" role="tablist">
                            <li class="nav-item"><a class="nav-link active" data-toggle="tab" href="#details"> <i class="fas fa-info-circle"></i> Chi tiết </a></li>
                            <li class="nav-item"><a class="nav-link" data-toggle="tab" href="#system"> <i class="fab fa-windows"></i> Hệ thống </a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div role="tabpanel" class="tab-pane in active" id="details">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <div class="form-group mb-2">
                                                <label class="font-weight-bold mr-1">Tên mô tả:</label>
                                                <span>@Model.name</span>
                                            </div>
                                            <div class="form-group mb-2">
                                                <label class="font-weight-bold mr-1">Rượu:</label>
                                                <span>@lstProduct.name</span>
                                            </div>
                                            <div class="form-group">
                                                <label class="font-weight-bold mr-1">Nội dung:</label>
                                                <div class="mt-1 border p-2 content-border-radius">@Html.Raw(Model.description)</div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div role="tabpanel" class="tab-pane" id="system">
                                <div class="container">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="font-weight-bold mr-2">Người tạo:</label>
                                                <span>@Model.createBy</span>
                                            </div>
                                            <div class="form-group">
                                                <label class="font-weight-bold mr-2">Ngày tạo:</label>
                                                <span>@Model.createDate.Value.ToString("HH:mm, dd-MM-yyyy")</span>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label class="font-weight-bold mr-2">Người sửa:</label>
                                                <span>@Model.updateBy</span>
                                            </div>
                                            <div class="form-group">
                                                <label class="font-weight-bold mr-2">Ngày sửa:</label>
                                                <span>@Model.updateDate.Value.ToString("HH:mm, dd-MM-yyyy")</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-5 mx-sm-auto">
                                            <label class="font-weight-bold mr-2">Trạng thái:</label>
                                            <span>
                                                @if (Model.status == 1)
                                                {
                                                    <text>Đang hiển thị</text>
                                                }
                                                else
                                                {
                                                    <text>Đang ẩn</text>
                                                }
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>