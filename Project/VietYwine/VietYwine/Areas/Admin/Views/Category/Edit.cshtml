@model Model.Category

    <!-- Modal Header -->
    <div class="modal-header">
        <h4 class="modal-title">Chỉnh sửa</h4>
        <button type="button" class="close" data-dismiss="modal">&times;</button>
    </div>

    <!-- Modal body -->
    <div class="modal-body">
        <div class="row">
            <div class="col-md-12">
                <div class="mb-2">
                    <input type="text" placeholder="Tên thương hiệu" id="name-change" value="@Model.name" maxlength="100" onchange="nameChange()" class="form-control" />
                </div>
                <div class="mb-2">
                    <input type="text" placeholder="Slug" id="slug-name" maxlength="200" value="@Model.slug" class="form-control cursor-no-drop" readonly />
                </div>
                <div class="mb-2">
                    <input type="text" placeholder="Meta Title" maxlength="60" value="@Model.MetaTitle" id="metaTitle" class="form-control" />
                </div>
                <div class="mb-2">
                    <input type="text" placeholder="Meta Keywords" maxlength="255" value="@Model.MetaKeyWord" id="metaKeyword" class="form-control" />
                </div>
                <div class="mb-2">
                    <textarea class="form-control textarea-resize-none" maxlength="160" id="metaDescription" rows="3" placeholder="Meta Description">@Model.MetaKeyWord</textarea>
                </div>
                <div class="form-group">
                    <label class="font-weight-bold mr-2">Trạng thái:</label>
                    <span>
                        @if (Model.status == 1)
                        {
                            <div class="radio inlineblock m-r-20">
                                <input type="radio" name="status" id="sTrue" class="with-gap" value="1" checked>
                                <label for="sTrue">Hiển thị</label>
                            </div>
                            <div class="radio inlineblock">
                                <input type="radio" name="status" id="sFalse" class="with-gap" value="2">
                                <label for="sFalse">Bỏ hiển thị</label>
                            </div>
                        }
                        else
                        {
                            <div class="radio inlineblock m-r-20">
                                <input type="radio" name="status" id="sTrue" class="with-gap" value="1">
                                <label for="sTrue">Hiển thị</label>
                            </div>
                            <div class="radio inlineblock">
                                <input type="radio" name="status" id="sFalse" class="with-gap" value="2" checked>
                                <label for="sFalse">Bỏ hiển thị</label>
                            </div>
                        }
                    </span>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal footer -->
    <div class="modal-footer">
        <button type="button" class="btn btn-success" onclick="editCategory(@Model.ID)">Lưu thay đổi</button>
        <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
    </div>