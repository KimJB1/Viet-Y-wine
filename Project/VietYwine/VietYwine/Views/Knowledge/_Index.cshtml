@using PagedList;
@using PagedList.Mvc;

@model IPagedList<Model.Post>

@foreach (var item in Model)
{
    <!-- Block4 -->
    <div class="blo4 p-b-63">
        <div class="pic-blo4 hov-img-zoom bo-rad-10 pos-relative">
            <a href="/doc/@item.slug">
                <img src="@item.avatar" alt="IMG-BLOG">
            </a>

            <div class="date-blo4 flex-col-c-m">
                <span class="txt30 m-b-4">
                    @item.updateDate.Value.Day
                </span>

                <span class="txt31">
                    @item.updateDate.Value.ToString("MMM, yyyy")
                </span>
            </div>
        </div>

        <div class="text-blo4 p-t-33">
            <h4 class="p-b-16">
                <a href="/doc/@item.slug" class="tit9">@item.name</a>
            </h4>

            <div class="txt32 flex-w p-b-24">

                <span>
                    @item.updateDate.Value.ToString("dd MMMM, yyyy")
                </span>

            </div>

            <p>
                @Html.Raw(item.summaryContent)
            </p>

            <a href="/doc/@item.slug" class="dis-block txt4 m-t-30">
                Đọc tiếp
                <i class="fa fa-long-arrow-right m-l-10" aria-hidden="true"></i>
            </a>
        </div>
    </div>
}

<div class="flex-c-m flex-w p-l-15 p-r-15 m-t-24 m-b-50 mx-sm-auto">
    @Html.PagedListPager(Model, page => Url.Action("_Index", new { page }),
        PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(
            new AjaxOptions()
            {
                UpdateTargetId = "show-knowledge"
            }
            )
        )
</div>